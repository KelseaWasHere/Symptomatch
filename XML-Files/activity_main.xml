    <Button
        android:id="@+id/addSymptomsButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/buttonBlue"
        android:onClick="AddSymptomsButtonClicked"
        android:text="Add Symptoms"
        android:textColor="@color/textWhite"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/savedConditionsButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/buttonBlue"
        android:onClick="SavedConditionsButtonClicked"
        android:text="Saved Conditions"
        android:textColor="@color/textWhite"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:onClick="ProfileButtonClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/userw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="#00FFFFFF"
        android:onClick="InfoButtonClicked"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/infow" />

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/symptomatch_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>